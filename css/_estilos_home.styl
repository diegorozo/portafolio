.btn
    width 100%

body 
    height 100%
    font-size: 16px
    font-family: Roboto
    color: negro
    margin: 0 auto
    overflow-x: hidden


.navbar
    .navbar-brand
        img 
            width 60px
    
.ig-header
    background-color: negro
    background-image: url(../images/bg.png)
    margin: 0 auto
    float left 
    width 100%
    height 500px

    .container
        height: 100%;

        .row
            height: 100%;

    h2 
        font-size: 40px
        font-weight: 700
        color: white   


    p 
        margin: 35px 0 0 0
        color: white
        font-weight: 300
        display block

    small 
        display: block

    span 
        font-size: 12px
        font-weight: 300
        display block
        color: white
        margin: 20px 0

    .dr-logo
        width 40%


.dr-aboutme, .dr-skill, .dr-story, .dr-blog, .dr-contact
    float left
    width 100%
    margin: 0px 0
    padding: 50px 0

.dr-aboutme
    h3 
        font-weight: 700
        font-size: 40px
        text-align: left

        span 
            color: gray


    .btn-secondary
        width 30%
        display inline-block
        vertical-align: top 

        &:hover
            background-color: negro          

    .drbtn
        background-color: gris
        padding: 5px 10px;
        color: white   
        height 38px 
        text-align: center
        display inline-block
        border-radius: 4px  
        vertical-align: top 
        text-decoration: none;

        &:hover
            background-color: negro  

.dr-skill
    background-image: url(../images/bg.png)
    padding: 50px 0
    color: white

    h4
        font-size: 20px
        margin: 20px 0

    h3 
        font-weight: 700
        font-size: 35px
        text-align: left

        span 
            color:black  

    .icono
        background-color: white
        width: 50px
        height 50px
        font-size: 30px
        border-radius: 50%
        text-align: center
        color: negro
        display flex
        align-content: center
        align-items: center
        justify-content: center

    p 
        font-weight: 300
        font-size: 16px


    .dr-procesocont
        ul
            margin: 0
            padding: 0
            li
                list-style none
                display flex
                align-content: center
                align-items: center


.dr-story
    padding: 50px 0

    .titulo
        h3 
            font-weight: 700
            font-size: 40px
            text-align: center

            span 
                color: verde


    .dr-historydt
        margin: 30px 0 
        padding: 10px 0
        border-bottom: 1px solid lightgray 

        &:last-child
            border:none

        h3
            margin: 0
            padding: 0   

        p
            font-weight: 300         

        .dr-fecha
            background-color: verde
            color: white
            padding: 5px 10px 
            text-align: center
            border-radius: 5px
            margin-top: 10px
            display block

    .az-ico
        .material-icons, .fa
            background-color: negro
            width: 50px
            height 50px
            font-size: 30px
            border-radius: 50%
            text-align: center
            color: white
            display flex
            align-content: center
            align-items: center
            justify-content: center
            margin: 10px 0;



.dr-blog
    background-color: #2c2c2c
    padding: 50px 0
    margin: 0

    .titulo
        text-align: center
        margin: 0px 0 30px 0
        display block


        h3 
            font-weight: 700
            font-size: 40px
            text-align: center
            color: white

        span 
            color: verde

    .dr-blogbg
        background-color: white
        padding: 10px
        border-radius: 5px

        h4
            border-bottom: 1px solid lightgray

        p
            font-weight: 300




.dr-internaux
    background-color: #f5f5f5
    padding: 50px 0
    margin-top: 80px

    .titulo
        display block
        margin-bottom: 30px
        text-align: center
        h3 
            font-weight: 700
            font-size: 40px
            text-align: center

        span 
            color: gray

.dr-contact
    padding: 60px 0
    background-color: #f5f5f5
    margin: 0

    .titulo
        display block
        margin-bottom: 30px
        h3 
            font-weight: 700
            font-size: 40px
            text-align: center

            span 
                color: verde


    .material-icons, .fa
        background-color: negro
        width: 50px
        height 50px
        font-size: 30px
        border-radius: 50%
        text-align: center
        color: white
        display flex
        align-content: center
        align-items: center
        justify-content: center
        margin: 10px 0;

    p 
        font-weight: 300
        font-size: 13px

    .contact-form
        background-color: white
        padding: 30px
        box-shadow: 0px 0px 10px rgba(0,0,0,0.2)
        border-radius: 5px

        .textarea-box
            margin: 20px 0

footer
    float left
    width 100%
    background-color: drul
    margin: auto

    .up
        background: #252d3c;
        height: 50px;
        display: flex;
        width: 120px;
        font-size: 12px
        border-radius:5px;
        align-content: center;
        align-items: center;
        justify-content: center;
        position: fixed;
        right: 10%;
        z-index: 999;
        bottom: 20px; 
        color: white
        text-decoration: none
        box-shadow: 0px 0px 6px rgba(0,0,0,0.5)
        i 
            font-size: 20px
            
    .ig-valorescontenidos, .ig-beneficioscontent

        .ig-titulos, p
            color: white

        .ig-benefparrafo
            color: white
            text-align: center
            margin: 20px 0 60px 0
            font-weight: 300

            &:after, &:before
                width 150px
                height 1px
                background-color: white 
                content: ""
                display block
                margin: 12px auto

        h3, i
            color: white                

    .dr-contact
        margin: 50px auto 30px auto


        .btn-mail
            border: 2px solid drul
            background-color: #FAFAFA
            border-radius: 50%
            width 70px
            height 70px
            margin: -40px auto 0 auto 
            display flex
            align-content: center
            align-items: center
            justify-content center

            i 
                font-size: 35px
                color: drul

        .contact-form
            margin-top: 20px

            .form-control 
                margin: 10px 0
                font-weight: 300
                font-size: 14px

            h4 
                color: drul                
                font-size: 16px;
                display: flex
                align-items: left 

            .error
                color: red

            ::-webkit-input-placeholder
                font-weight: 300
                font-size: 14px

            ::-moz-placeholder
                font-weight: 300
                font-size: 14px

            :-ms-input-placeholder
                font-weight: 300
                font-size: 14px

            :-moz-placeholder
                font-weight: 300
                font-size: 14px             

        .btn-link
            background-color: white
            color: drul
            padding: 8px 30px
            font-weight: 300
            cursor pointer !important
            display block
            margin: 20px auto

                    
        .ig-logofooter
            margin: 60px 0
            display: block
    

footer
    background-image: url(../images/bg.png)
    padding: 30px 0
    color: white
    float: left 
    width  100%

    .ig-copy
        margin: auto
        text-align: center

        p 
            font-size: 14px 
            color white
            padding: 0
            margin: 0